{
  "version": "1.0.1",
  "manifest_version": 2,
  "name": "Chromez",
  "content_security_policy": "script-src 'self' 'sha256-xr+HqUtnq8KF3IBn+TQ37Vz0elxg11bPYmNJy5M/p38='; object-src 'self'",
  "author": "Christopher Tran",
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "downloads",
    "history",
    "management",
    "commands",
    "browsingData",
    "sessions",
    "storage",
    "nativeMessaging",
    "notifications"
  ],
  "commands": {
    "download-instagram-photo": {
      "suggested_key": {
        "default": "Ctrl+Z"
      },
      "description": "Downloads the best quality photo that it can find"
    },
    "youtube_open_modal": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Opens a modal to configure options"
    }
  },
  "icons": {
    "16": "resources/contextmenu-icon.png",
    "48": "resources/contextmenu-icon48x48.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Chromez",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "/static/js/content.js",
        "/static/js/main.chunk.js",
        "/static/js/2.chunk.js"
      ]
    }
  ],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  }
}
