{
  "version": "1.0",
  "manifest_version": 2,
  "name": "Chromez",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "v/p extractor",
  "author": "Christopher Tran",
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "downloads",
    "history",
    "management",
    "commands",
    "browsingData",
    "sessions",
    "storage",
    "nativeMessaging",
    "notifications"
  ],
  "commands": {
    "download-instagram-photo": {
      "suggested_key": {
        "default": "Ctrl+Z"
      },
      "description": "Downloads the best quality photo that it can find"
    },
    "download-instagram-video": {
      "suggested_key": {
        "default": "Ctrl+Z"
      },
      "description": "Downloads the best quality video that it can find"
    }
  },
  "icons": {
    "16": "app/resources/contextmenu-icon.png",
    "48": "app/resources/contextmenu-icon48x48.png"
  },
  "browser_action": {
    "default_title": "Chromez",
    "default_icon": "app/resources/contextmenu-icon48x48.png",
    "default_popup": "app/popup.html"
  },
  "background": {
    "scripts": ["app/utils.js", "app/background.js", "app/contextMenus.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.pornhub.com/*",
        "*://*.pornhubpremium.com/*"
      ],
      "js": [
        "app/utils.js",
        "app/contentScripts/lib/jquery-3.4.1.min.js",
        "app/contentScripts/contentScripts.js",
        "app/contentScripts/modules/instagram.js",
        "app/contentScripts/modules/pornhub.js"
      ],
      "css": ["app/contentScripts/styles.css"]
    }
  ],
  "options_page": "app/options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "app/options.html"
  }
}
