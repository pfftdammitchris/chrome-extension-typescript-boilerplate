{
  "version": "1.1",
  "manifest_version": 2,
  "name": "Snake",
  "description": "A tool to grab the best quality video link of a supported web site through any of their pages.",
  "author": "Christopher Tran",
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "cookies",
    "downloads",
    "history",
    "management",
    "commands",
    "browsingData",
    "sessions",
    "storage",
    "nativeMessaging",
    "notifications"
  ],
  "commands": {
    "galleria": {
      "suggested_key": {
        "default": "Ctrl+Z"
      },
      "description": "Display a window to select the type of query."
    },
    "snatch-video": {
      "suggested_key": {
        "default": "Ctrl+Space"
      },
      "description": "Detect the highest quality video on spankbang.com web page and copy to clipboard."
    }
  },
  "icons": {
    "16": "./resources/contextmenu-icon.png",
    "48": "./resources/contextmenu-icon48x48.png"
  },
  "browser_action": {
    "default_title": "You are a snake. Don't forget.",
    "default_icon": "./resources/contextmenu-icon48x48.png"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [],
      "js": [
        "libraries/jquery-3.3.1.min.js",
        "libraries/iziModal.min.js",
        "content.js"
      ],
      "css": ["libraries/iziModal.min.css", "styles.css"]
    }
  ],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  }
}
