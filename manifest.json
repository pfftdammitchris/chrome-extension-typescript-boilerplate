{
  "version": "1.0",
  "manifest_version": 2,
  "name": "chromez",
  "description": "v/p extractor",
  "author": "Christopher Tran",
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "downloads",
    "history",
    "management",
    "commands",
    "browsingData",
    "sessions",
    "storage",
    "nativeMessaging",
    "notifications"
  ],
  "commands": {
    "galleria": {
      "suggested_key": {
        "default": "Ctrl+Z"
      },
      "description": "Display a window to select the type of query."
    }
  },
  "icons": {
    "16": "./resources/contextmenu-icon.png",
    "48": "./resources/contextmenu-icon48x48.png"
  },
  "browser_action": {
    "default_title": "Chromez",
    "default_icon": "./resources/contextmenu-icon48x48.png"
  },
  "background": {
    "page": "src/background/background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libraries/jquery-3.3.1.min.js", "src/clientSide/content.js"],
      "css": ["src/clientSide/styles.css"]
    },
    {
      "matches": ["*instagram.com/*"],
      "js": [
        "libraries/jquery-3.3.1.min.js",
        "src/apps/instagram/instagram.js",
        "src/apps/instagram/utils.js"
      ],
      "css": ["src/apps/instagram/styles.css"]
    }
  ],
  "options_page": "src/background/options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "src/background/options.html"
  }
}
